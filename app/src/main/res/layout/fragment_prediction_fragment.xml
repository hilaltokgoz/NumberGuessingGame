<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PredictionFragmentFragment">

    <TextView
        android:id="@+id/remainingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalan Hak"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/helperText"
        app:layout_constraintEnd_toEndOf="@+id/helperText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/helperText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/helperText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yardımcı"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/predictionEditText"
        app:layout_constraintEnd_toEndOf="@+id/predictionEditText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/predictionEditText"
        app:layout_constraintTop_toBottomOf="@+id/remainingText" />

    <EditText
        android:id="@+id/predictionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tahmininiz"
        android:inputType="number|text"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/predictionButton"
        app:layout_constraintEnd_toEndOf="@+id/predictionButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/predictionButton"
        app:layout_constraintTop_toBottomOf="@+id/helperText" />

    <Button
        android:id="@+id/predictionButton"
        android:layout_width="188dp"
        android:layout_height="113dp"
        android:text="Tahmin Et"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/predictionEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>